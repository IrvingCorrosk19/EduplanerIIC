@model SchoolManager.Models.Student
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Detalles de Estudiante";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-info-circle mr-2"></i>Detalles de Estudiante</h3>
                <small>Información completa del estudiante</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-user-graduate mr-2"></i>Información del Estudiante</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">@(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                        <dt class="col-sm-4">Grado:</dt>
                        <dd class="col-sm-8">@(Model.Grade ?? "N/A")</dd>

                        <dt class="col-sm-4">Grupo:</dt>
                        <dd class="col-sm-8">@(Model.GroupName ?? "N/A")</dd>

                        <dt class="col-sm-4">Escuela:</dt>
                        <dd class="col-sm-8">@(Model.School?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Acudiente:</dt>
                        <dd class="col-sm-8">@(Model.Parent?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Fecha de Creación:</dt>
                        <dd class="col-sm-8">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                    </dl>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit mr-2"></i>Editar
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
