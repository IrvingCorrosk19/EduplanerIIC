@model IEnumerable<SchoolManager.Models.Student>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gestión de Estudiantes";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-user-graduate mr-2"></i>Gestión de Estudiantes</h3>
                <small>Administrar información de estudiantes</small>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Nuevo Estudiante
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list mr-2"></i>Lista de Estudiantes</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>No hay estudiantes registrados.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="studentsTable">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Fecha Nacimiento</th>
                                        <th>Grado</th>
                                        <th>Grupo</th>
                                        <th>Escuela</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td><strong>@student.Name</strong></td>
                                            <td>@(student.BirthDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                            <td>@(student.Grade ?? "N/A")</td>
                                            <td>@(student.GroupName ?? "N/A")</td>
                                            <td>@(student.School?.Name ?? "N/A")</td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = student.Id })" class="btn btn-sm btn-info" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = student.Id })" class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = student.Id })" class="btn btn-sm btn-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#studentsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
}
