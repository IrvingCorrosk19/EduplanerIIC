@model SchoolManager.ViewModels.SchoolAdminEditViewModel

@{
    ViewData["Title"] = "Editar Escuela";
    Layout = "_SuperAdminLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditSchool" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="SchoolId" />
                        <input type="hidden" asp-for="AdminId" />
                        <input type="hidden" asp-for="SchoolLogoUrl" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="mb-3">Información de la Escuela</h4>
                                
                                <div class="mb-3">
                                    <label asp-for="SchoolName" class="form-label"></label>
                                    <input asp-for="SchoolName" class="form-control" />
                                    <span asp-validation-for="SchoolName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SchoolAddress" class="form-label"></label>
                                    <input asp-for="SchoolAddress" class="form-control" />
                                    <span asp-validation-for="SchoolAddress" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="SchoolPhone" class="form-label"></label>
                                    <input asp-for="SchoolPhone" class="form-control" />
                                    <span asp-validation-for="SchoolPhone" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Logo de la Escuela</label>
                                    <input type="file" name="logoFile" class="form-control" accept="image/*" />
                                    @if (!string.IsNullOrEmpty(Model.SchoolLogoUrl))
                                    {
                                        <div class="mt-2">
                                            <img src="@Model.SchoolLogoUrl" alt="Logo actual" class="img-thumbnail" style="max-height: 100px;" />
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h4 class="mb-3">Información del Administrador</h4>

                                <div class="mb-3">
                                    <label asp-for="AdminName" class="form-label"></label>
                                    <input asp-for="AdminName" class="form-control" />
                                    <span asp-validation-for="AdminName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AdminLastName" class="form-label"></label>
                                    <input asp-for="AdminLastName" class="form-control" />
                                    <span asp-validation-for="AdminLastName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AdminEmail" class="form-label"></label>
                                    <input asp-for="AdminEmail" class="form-control" />
                                    <span asp-validation-for="AdminEmail" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AdminStatus" class="form-label"></label>
                                    <select asp-for="AdminStatus" class="form-select">
                                        <option value="active">Activo</option>
                                        <option value="inactive">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="AdminStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0">
                            <div class="d-flex justify-content-between">
                                <a asp-action="ListSchools" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Volver
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 