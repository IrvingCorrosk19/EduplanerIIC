            const gradeLevelId = $('#selGrade').val();
            const trimester = $('#selTrimester').val();

            if (subjectId && groupId && gradeLevelId && trimester) {
                cargarAsistencias(subjectId, groupId, gradeLevelId, trimester);
            }
        });
