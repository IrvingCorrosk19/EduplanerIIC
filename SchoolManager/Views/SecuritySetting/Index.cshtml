@model IEnumerable<SchoolManager.Models.SecuritySetting>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Configuración de Seguridad";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-shield-alt mr-2"></i>Configuración de Seguridad</h3>
                <small>Gestionar políticas de seguridad y contraseñas</small>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Nueva Configuración
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list mr-2"></i>Lista de Configuraciones</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>No hay configuraciones de seguridad registradas.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="settingsTable">
                                <thead>
                                    <tr>
                                        <th>Escuela</th>
                                        <th>Longitud Mínima</th>
                                        <th>Requisitos</th>
                                        <th>Expiración (días)</th>
                                        <th>Intentos Máx.</th>
                                        <th>Timeout (min)</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var setting in Model)
                                    {
                                        <tr>
                                            <td><strong>@(setting.School?.Name ?? "N/A")</strong></td>
                                            <td>@(setting.PasswordMinLength ?? 8)</td>
                                            <td>
                                                @if (setting.RequireUppercase == true) { <span class="badge bg-info">Mayúsculas</span> }
                                                @if (setting.RequireLowercase == true) { <span class="badge bg-info">Minúsculas</span> }
                                                @if (setting.RequireNumbers == true) { <span class="badge bg-info">Números</span> }
                                                @if (setting.RequireSpecial == true) { <span class="badge bg-info">Especiales</span> }
                                            </td>
                                            <td>@(setting.ExpiryDays ?? 90)</td>
                                            <td>@(setting.MaxLoginAttempts ?? 5)</td>
                                            <td>@(setting.SessionTimeoutMinutes ?? 30)</td>
                                            <td>
                                                <a href="@Url.Action("Details", new { schoolId = setting.SchoolId })" class="btn btn-sm btn-info" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { schoolId = setting.SchoolId })" class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#settingsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });
        });
    </script>
}
