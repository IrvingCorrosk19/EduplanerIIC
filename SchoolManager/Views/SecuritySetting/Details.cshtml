@model SchoolManager.Models.SecuritySetting
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Detalles de Configuración de Seguridad";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-info-circle mr-2"></i>Detalles de Configuración de Seguridad</h3>
                <small>Información completa de la configuración</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-shield-alt mr-2"></i>Información de Seguridad</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Escuela:</dt>
                        <dd class="col-sm-8">@(Model.School?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Longitud Mínima:</dt>
                        <dd class="col-sm-8">@(Model.PasswordMinLength ?? 8) caracteres</dd>

                        <dt class="col-sm-4">Requisitos de Contraseña:</dt>
                        <dd class="col-sm-8">
                            @if (Model.RequireUppercase == true) { <span class="badge bg-info">Mayúsculas</span> }
                            @if (Model.RequireLowercase == true) { <span class="badge bg-info">Minúsculas</span> }
                            @if (Model.RequireNumbers == true) { <span class="badge bg-info">Números</span> }
                            @if (Model.RequireSpecial == true) { <span class="badge bg-info">Especiales</span> }
                            @if (Model.RequireUppercase != true && Model.RequireLowercase != true && Model.RequireNumbers != true && Model.RequireSpecial != true)
                            {
                                <span class="text-muted">Ninguno</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Expiración:</dt>
                        <dd class="col-sm-8">@(Model.ExpiryDays ?? 90) días</dd>

                        <dt class="col-sm-4">Prevenir Reutilización:</dt>
                        <dd class="col-sm-8">Últimas @(Model.PreventReuse ?? 3) contraseñas</dd>

                        <dt class="col-sm-4">Intentos Máximos:</dt>
                        <dd class="col-sm-8">@(Model.MaxLoginAttempts ?? 5) intentos</dd>

                        <dt class="col-sm-4">Timeout de Sesión:</dt>
                        <dd class="col-sm-8">@(Model.SessionTimeoutMinutes ?? 30) minutos</dd>

                        <dt class="col-sm-4">Fecha de Creación:</dt>
                        <dd class="col-sm-8">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                    </dl>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { schoolId = Model.SchoolId })" class="btn btn-warning">
                            <i class="fas fa-edit mr-2"></i>Editar
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
