@model SchoolManager.Models.SecuritySetting
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Nueva Configuración de Seguridad";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-plus-circle mr-2"></i>Nueva Configuración de Seguridad</h3>
                <small>Configure las políticas de seguridad para una escuela</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Información de Seguridad</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="SchoolId" class="form-label">Escuela</label>
                            <select asp-for="SchoolId" class="form-select" asp-items="ViewBag.Schools">
                                <option value="">Seleccione una escuela</option>
                            </select>
                            <span asp-validation-for="SchoolId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PasswordMinLength" class="form-label">Longitud Mínima de Contraseña</label>
                            <input asp-for="PasswordMinLength" type="number" min="6" max="20" class="form-control" value="8" />
                            <span asp-validation-for="PasswordMinLength" class="text-danger"></span>
                            <small class="form-text text-muted">Mínimo 6, máximo 20 caracteres</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RequireUppercase" class="form-check-input" type="checkbox" />
                                        <label asp-for="RequireUppercase" class="form-check-label">
                                            Requerir Mayúsculas
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RequireLowercase" class="form-check-input" type="checkbox" />
                                        <label asp-for="RequireLowercase" class="form-check-label">
                                            Requerir Minúsculas
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RequireNumbers" class="form-check-input" type="checkbox" />
                                        <label asp-for="RequireNumbers" class="form-check-label">
                                            Requerir Números
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="RequireSpecial" class="form-check-input" type="checkbox" />
                                        <label asp-for="RequireSpecial" class="form-check-label">
                                            Requerir Caracteres Especiales
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpiryDays" class="form-label">Días de Expiración de Contraseña</label>
                            <input asp-for="ExpiryDays" type="number" min="30" max="365" class="form-control" value="90" />
                            <span asp-validation-for="ExpiryDays" class="text-danger"></span>
                            <small class="form-text text-muted">Días antes de que expire la contraseña</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PreventReuse" class="form-label">Prevenir Reutilización (últimas N contraseñas)</label>
                            <input asp-for="PreventReuse" type="number" min="0" max="10" class="form-control" value="3" />
                            <span asp-validation-for="PreventReuse" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxLoginAttempts" class="form-label">Intentos Máximos de Login</label>
                            <input asp-for="MaxLoginAttempts" type="number" min="3" max="10" class="form-control" value="5" />
                            <span asp-validation-for="MaxLoginAttempts" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SessionTimeoutMinutes" class="form-label">Timeout de Sesión (minutos)</label>
                            <input asp-for="SessionTimeoutMinutes" type="number" min="5" max="480" class="form-control" value="30" />
                            <span asp-validation-for="SessionTimeoutMinutes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Crear Configuración
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
