@model SchoolManager.Models.TimeSlot
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Nuevo bloque horario";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1>Nuevo bloque horario</h1>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card card-outline card-primary">
                <div class="card-header"><h3 class="card-title">Datos del bloque</h3></div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Nombre del bloque</label>
                                    <input asp-for="Name" class="form-control" placeholder="Ej: Bloque 1, 07:00-07:45" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label asp-for="DisplayOrder" class="control-label">Orden</label>
                                    <input asp-for="DisplayOrder" type="number" min="0" class="form-control" value="0" />
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="StartTime" class="control-label">Hora inicio</label>
                                    <input asp-for="StartTime" type="time" class="form-control" />
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="EndTime" class="control-label">Hora fin</label>
                                    <input asp-for="EndTime" type="time" class="form-control" />
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Crear bloque</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
