@model SchoolManager.Models.Activity
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Detalles de Actividad";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-info-circle mr-2"></i>Detalles de Actividad</h3>
                <small>Información completa de la actividad académica</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-tasks mr-2"></i>Información de la Actividad</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">Tipo:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Type?.ToLower() == "examen" ? "bg-danger" : Model.Type?.ToLower() == "parcial" ? "bg-warning" : "bg-info")">
                                @Model.Type
                            </span>
                        </dd>

                        <dt class="col-sm-4">Trimestre:</dt>
                        <dd class="col-sm-8">@(Model.Trimester ?? "N/A")</dd>

                        <dt class="col-sm-4">Fecha de Entrega:</dt>
                        <dd class="col-sm-8">@(Model.DueDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>

                        <dt class="col-sm-4">Materia:</dt>
                        <dd class="col-sm-8">@(Model.Subject?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Grupo:</dt>
                        <dd class="col-sm-8">@(Model.Group?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Grado ID:</dt>
                        <dd class="col-sm-8">@(Model.GradeLevelId?.ToString() ?? "N/A")</dd>

                        @if (!string.IsNullOrEmpty(Model.PdfUrl))
                        {
                            <dt class="col-sm-4">PDF:</dt>
                            <dd class="col-sm-8">
                                <a href="@Model.PdfUrl" target="_blank" class="btn btn-sm btn-primary">
                                    <i class="fas fa-file-pdf mr-2"></i>Ver PDF
                                </a>
                            </dd>
                        }
                    </dl>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit mr-2"></i>Editar
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
