@model SchoolManager.Dtos.ActivityCreateDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Nueva Actividad";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-plus-circle mr-2"></i>Nueva Actividad Académica</h3>
                <small>Crear una nueva tarea, parcial o examen</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Información de la Actividad</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nombre de la Actividad *</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Tipo *</label>
                            <select asp-for="Type" class="form-select" required>
                                <option value="">Seleccione un tipo</option>
                                <option value="tarea">Tarea</option>
                                <option value="parcial">Parcial</option>
                                <option value="examen">Examen</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrimesterCode" class="form-label">Trimestre *</label>
                            <select asp-for="TrimesterCode" class="form-select" required>
                                <option value="">Seleccione un trimestre</option>
                                <option value="1T">Primer Trimestre</option>
                                <option value="2T">Segundo Trimestre</option>
                                <option value="3T">Tercer Trimestre</option>
                            </select>
                            <span asp-validation-for="TrimesterCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Fecha de la Actividad *</label>
                            <input asp-for="Date" type="date" class="form-control" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">Fecha de Entrega *</label>
                            <input asp-for="DueDate" type="datetime-local" class="form-control" required />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pdf" class="form-label">Archivo PDF (Opcional)</label>
                            <input asp-for="Pdf" type="file" accept=".pdf" class="form-control" />
                            <span asp-validation-for="Pdf" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Crear Actividad
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
