@model IEnumerable<SchoolManager.Models.Group>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-people text-primary me-2"></i>Gestión de Grupos</h5>
    </div>
    <div class="card-body">
        <div class="search-bar">
            <input type="text" id="searchGroups" placeholder="Buscar grupo por nombre o descripción...">
        </div>
        <div class="table-responsive">
            <table id="groupTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay grupos registrados.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var group in Model)
                        {
                            <tr data-id="@group.Id">
                                <td class="align-middle text-center">
                                    <span class="group-name-text">@group.Name</span>
                                    <input type="text" class="form-control d-none group-name-input" value="@group.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="group-description-text">@group.Description</span>
                                    <textarea class="form-control d-none group-description-input">@group.Description</textarea>
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-action btn-edit me-1 btn-edit-group" title="Editar">
                                        <i class="bi bi-pencil me-1"></i> Editar
                                    </button>
                                    <button class="btn btn-action btn-save d-none me-1 btn-save-group" title="Guardar">
                                        <i class="bi bi-check me-1"></i> Guardar
                                    </button>
                                    <button class="btn btn-action btn-delete btn-delete-group" title="Eliminar">
                                        <i class="bi bi-trash me-1"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <h6 class="mb-3">Agregar Nuevo Grupo</h6>
            <div class="row">
                <div class="col-md-5">
                    <input type="text" id="newGroupName" class="form-control mb-2" placeholder="Nombre del grupo" />
                </div>
                <div class="col-md-5">
                    <input type="text" id="newGroupDescription" class="form-control mb-2" placeholder="Descripción (opcional)" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" onclick="createGroup()">
                        <i class="bi bi-plus-circle me-1"></i> Agregar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

