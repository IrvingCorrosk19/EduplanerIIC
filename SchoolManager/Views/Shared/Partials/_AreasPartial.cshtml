@model IEnumerable<SchoolManager.Models.Area>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-diagram-3 text-primary me-2"></i>Gestión de Áreas</h5>
    </div>
    <div class="card-body">
        <div class="search-bar">
            <input type="text" id="searchAreas" placeholder="Buscar área por nombre o descripción...">
        </div>
        <div class="table-responsive">
            <table id="areaTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay áreas registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var area in Model)
                        {
                            <tr data-id="@area.Id">
                                <td class="align-middle text-center">
                                    <span class="area-name-text">@area.Name</span>
                                    <input type="text" class="form-control d-none area-name-input" value="@area.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="area-description-text">@area.Description</span>
                                    <textarea class="form-control d-none area-description-input">@area.Description</textarea>
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-action btn-edit me-1 btn-edit-area" title="Editar">
                                        <i class="bi bi-pencil me-1"></i> Editar
                                    </button>
                                    <button class="btn btn-action btn-save d-none me-1 btn-save-area" title="Guardar">
                                        <i class="bi bi-check me-1"></i> Guardar
                                    </button>
                                    <button class="btn btn-action btn-delete btn-delete-area" title="Eliminar">
                                        <i class="bi bi-trash me-1"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <h6 class="mb-3">Agregar Nueva Área</h6>
            <div class="row">
                <div class="col-md-5">
                    <input type="text" id="newAreaName" class="form-control mb-2" placeholder="Nombre del área" />
                </div>
                <div class="col-md-5">
                    <input type="text" id="newAreaDescription" class="form-control mb-2" placeholder="Descripción (opcional)" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" onclick="createArea()">
                        <i class="bi bi-plus-circle me-1"></i> Agregar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
