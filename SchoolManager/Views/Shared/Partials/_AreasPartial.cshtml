@model IEnumerable<SchoolManager.Models.Area>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3">
            <i class="bi bi-diagram-3 text-primary me-2"></i>Gestión de Áreas
        </h5>
    </div>
    <div class="card-body">
        <div class="search-bar">
            <input type="text" id="searchAreas" placeholder="Buscar área por nombre o descripción..." autocomplete="off">
        </div>
        <div class="table-responsive">
            <table id="areaTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center" style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var area in Model ?? Enumerable.Empty<SchoolManager.Models.Area>())
                    {
                        <tr data-id="@area.Id" data-active="@area.IsActive.ToString().ToLower()">
                            <td class="align-middle text-center">
                                <span class="area-name-text">@area.Name</span>
                                <input type="text" class="form-control d-none area-name-input" value="@area.Name" autocomplete="off" />
                            </td>
                            <td class="align-middle text-center">
                                <span class="area-description-text">@area.Description</span>
                                <textarea class="form-control d-none area-description-input">@area.Description</textarea>
                            </td>
                            <td class="align-middle text-center">
                                @if (area.IsActive)
                                {
                                    <span class="badge bg-success area-status-badge">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary area-status-badge">Inactiva</span>
                                }
                            </td>
                            <td class="align-middle text-center">
                                <button class="btn btn-action btn-edit me-1 btn-edit-area" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-action btn-save d-none me-1 btn-save-area" title="Guardar">
                                    <i class="bi bi-check"></i>
                                </button>
                                @if (area.IsActive)
                                {
                                    <button class="btn btn-action btn-warning me-1 btn-toggle-area" title="Desactivar">
                                        <i class="bi bi-pause-circle"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-action btn-success me-1 btn-toggle-area" title="Activar">
                                        <i class="bi bi-play-circle"></i>
                                    </button>
                                }
                                <button class="btn btn-action btn-delete btn-delete-area" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <h6 class="mb-3">Agregar Nueva Área</h6>
            <div class="row">
                <div class="col-md-5">
                    <input type="text" id="newAreaName" class="form-control mb-2" placeholder="Nombre del área" autocomplete="off" />
                </div>
                <div class="col-md-5">
                    <input type="text" id="newAreaDescription" class="form-control mb-2" placeholder="Descripción (opcional)" autocomplete="off" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" onclick="createArea()">
                        <i class="bi bi-plus-circle me-1"></i> Agregar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
