@model IEnumerable<SchoolManager.Models.GradeLevel>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3">
            <i class="bi bi-mortarboard text-primary me-2"></i>Gestión de Grados Escolares
        </h5>
    </div>
    <div class="card-body">
        <div class="search-bar">
            <input type="text" id="searchGrades" placeholder="Buscar grado por nombre o descripción...">
        </div>
        <div class="table-responsive">
            <table id="gradeTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model ?? Enumerable.Empty<SchoolManager.Models.GradeLevel>())
                    {
                        <tr data-id="@grade.Id">
                            <td class="align-middle text-center">
                                <span class="grade-name-text">@grade.Name</span>
                                <input type="text" class="form-control d-none grade-name-input" value="@grade.Name" />
                            </td>
                            <td class="align-middle text-center">
                                <span class="grade-description-text">@grade.Description</span>
                                <textarea class="form-control d-none grade-description-input">@grade.Description</textarea>
                            </td>
                            <td class="align-middle text-center">
                                <button class="btn btn-action btn-edit me-1 btn-edit-grade" title="Editar">
                                    <i class="bi bi-pencil me-1"></i> Editar
                                </button>
                                <button class="btn btn-action btn-save d-none me-1 btn-save-grade" title="Guardar">
                                    <i class="bi bi-check me-1"></i> Guardar
                                </button>
                                <button class="btn btn-action btn-delete btn-delete-grade" title="Eliminar">
                                    <i class="bi bi-trash me-1"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <h6 class="mb-3">Agregar Nuevo Grado</h6>
            <div class="row">
                <div class="col-md-5">
                    <input type="text" id="newGradeName" class="form-control mb-2" placeholder="Nombre del grado" />
                </div>
                <div class="col-md-5">
                    <input type="text" id="newGradeDescription" class="form-control mb-2" placeholder="Descripción (opcional)" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" onclick="createGrade()">
                        <i class="bi bi-plus-circle me-1"></i> Agregar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
