@model IEnumerable<SchoolManager.Models.Subject>

<div class="card card-outline card-primary">
    <div class="card-header">
        <h5 class="card-title fw-bold fs-3"><i class="bi bi-book text-primary me-2"></i>Gestión de Materias</h5>
    </div>
    <div class="card-body">
        <div class="search-bar">
            <input type="text" id="searchSubjects" placeholder="Buscar materia por nombre o descripción...">
        </div>
        <div class="table-responsive">
            <table id="subjectTable" class="table table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Descripción</th>
                        <th class="text-center" style="width: 150px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No hay materias registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var subject in Model)
                        {
                            <tr data-id="@subject.Id">
                                <td class="align-middle text-center">
                                    <span class="subject-name-text">@subject.Name</span>
                                    <input type="text" class="form-control d-none subject-name-input" value="@subject.Name" />
                                </td>
                                <td class="align-middle text-center">
                                    <span class="subject-description-text">@subject.Description</span>
                                    <textarea class="form-control d-none subject-description-input">@subject.Description</textarea>
                                </td>
                                <td class="align-middle text-center">
                                    <button class="btn btn-action btn-edit me-1 btn-edit-subject" title="Editar">
                                        <i class="bi bi-pencil me-1"></i> Editar
                                    </button>
                                    <button class="btn btn-action btn-save d-none me-1 btn-save-subject" title="Guardar">
                                        <i class="bi bi-check me-1"></i> Guardar
                                    </button>
                                    <button class="btn btn-action btn-delete btn-delete-subject" title="Eliminar">
                                        <i class="bi bi-trash me-1"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <h6 class="mb-3">Agregar Nueva Materia</h6>
            <div class="row">
                <div class="col-md-5">
                    <input type="text" id="newSubjectName" class="form-control mb-2" placeholder="Nombre de la materia" />
                </div>
                <div class="col-md-5">
                    <input type="text" id="newSubjectDescription" class="form-control mb-2" placeholder="Descripción (opcional)" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" onclick="createSubject()">
                        <i class="bi bi-plus-circle me-1"></i> Agregar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

