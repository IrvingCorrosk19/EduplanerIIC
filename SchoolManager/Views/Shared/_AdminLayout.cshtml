@inject SchoolManager.Services.Interfaces.ICurrentUserService CurrentUserService
@{
    Layout = null;
    var userName = User.Identity?.Name ?? "Usuario";
    var userRole = (await CurrentUserService.GetCurrentUserRoleAsync())?.ToLower() ?? "";
    var userSchool = await CurrentUserService.GetCurrentUserSchoolAsync();
    var currentUser = await CurrentUserService.GetCurrentUserAsync();
    var fullName = currentUser != null ? $"{currentUser.Name} {currentUser.LastName}" : userName;
    
    // Traducir rol a español para mostrar según la base de datos
    var rolEnEspanol = userRole switch
    {
        "superadmin" => "Super Administrador",
        "admin" => "Administrador", 
        "director" => "Director",
        "teacher" => "Docente",
        "parent" => "Padre/Madre",
        "student" => "Estudiante",
        "estudiante" => "Estudiante",
        _ => userRole
    };
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManager</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/css/adminlte.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <!-- CSS de DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        .sidebar-footer {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0,0,0,0.1);
        }
        .sidebar-footer img {
            transition: transform 0.3s ease;
        }
        .sidebar-footer:hover img {
            transform: scale(1.05);
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">Inicio</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <!-- Notificaciones de Mensajes -->
                <li class="nav-item dropdown">
                    <a class="nav-link" href="@Url.Action("Inbox", "Messaging")" title="Mensajes">
                        <i class="fas fa-envelope fa-lg"></i>
                        <span class="badge badge-danger navbar-badge unread-badge-top" style="display: none;">0</span>
                    </a>
                </li>
                <li class="nav-item">
                    <span class="nav-link">
                        <i class="fas fa-user"></i> @fullName
                        <span class="badge badge-success ml-2">@rolEnEspanol</span>
                    </span>
                </li>
                <li class="nav-item">
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link">
                            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                @if (userSchool != null && !string.IsNullOrEmpty(userSchool.LogoUrl))
                {
                    @if (userSchool.LogoUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                    {
                        <!-- URL de Cloudinary - acceso directo -->
                        <img src="@userSchool.LogoUrl" alt="Logo de @userSchool.Name" class="brand-image img-circle elevation-3" style="opacity: .8">
                    }
                    else
                    {
                        <!-- URL local antigua -->
                        <img src="/File/GetSchoolLogo?logoUrl=@userSchool.LogoUrl" alt="Logo de @userSchool.Name" class="brand-image img-circle elevation-3" style="opacity: .8">
                    }
                }
                else
                {
                    <img src="~/img/logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                }
                <span class="brand-text font-weight-light">@(userSchool?.Name ?? "School Manager")</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "ChangePassword")" class="nav-link">
                                <i class="nav-icon fas fa-key"></i>
                                <p>Cambiar Contraseña</p>
                            </a>
                        </li>
                        <!-- Mensajería - Disponible para todos -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-envelope"></i>
                                <p>
                                    Mensajería
                                    <i class="right fas fa-angle-left"></i>
                                    <span class="badge badge-warning right unread-badge" style="display: none;">0</span>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Inbox", "Messaging")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Bandeja de Entrada</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Sent", "Messaging")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Enviados</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Compose", "Messaging")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nuevo Mensaje</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @if (userRole == "student" || userRole == "estudiante") {
                        <li class="nav-item">
                                <a href="@Url.Action("Index", "StudentReport")" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Mis Calificaciones</p>
                            </a>
                        </li>
                        <li class="nav-item">
                                <a href="@Url.Action("Index", "StudentProfile")" class="nav-link">
                                <i class="nav-icon fas fa-user-edit"></i>
                                <p>Mi Perfil</p>
                            </a>
                        </li>
                        <li class="nav-item">
                                <a href="@Url.Action("Index", "StudentOrientation")" class="nav-link">
                                <i class="nav-icon fas fa-compass"></i>
                                <p>Orientación Escolar</p>
                            </a>
                        </li>
                        }
                        @if (userRole == "teacher") {
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "TeacherGradebook")" class="nav-link">
                                <i class="nav-icon fas fa-chalkboard-teacher"></i>
                                <p>Portal Docente</p>
                            </a>
                        </li>
                        @if (currentUser?.Disciplina == true) {
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "TeacherGradebookDuplicate")" class="nav-link">
                                <i class="nav-icon fas fa-graduation-cap"></i>
                                <p>Portal Disciplina</p>
                            </a>
                        </li>
                        }
                        @if (currentUser?.Orientacion == true) {
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "OrientationReport")" class="nav-link">
                                <i class="nav-icon fas fa-compass"></i>
                                <p>Portal Orientación</p>
                            </a>
                        </li>
                        }
                        }
                        @if (userRole == "director") {
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Director")" class="nav-link">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>Portal Director</p>
                            </a>
                        </li>
                        }
                        @if (userRole == "admin" || userRole == "director" || userRole == "teacher") {
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>
                                    Reportes
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "AprobadosReprobados")" class="nav-link">
                                        <i class="fas fa-chart-bar nav-icon"></i>
                                        <p>Aprobados y Reprobados</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        }
                        @if (userRole == "admin") {
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>
                                    Administración
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "User")" class="nav-link">
                                        <i class="fas fa-users nav-icon"></i>
                                        <p>Administrar Usuarios</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "AcademicCatalog")" class="nav-link">
                                        <i class="fas fa-layer-group nav-icon"></i>
                                        <p>Catálogo Académico</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "SubjectAssignment")" class="nav-link">
                                        <i class="fas fa-clipboard nav-icon"></i>
                                        <p>Catálogo de Asignaciones</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "TeacherAssignment")" class="nav-link">
                                        <i class="fas fa-tasks nav-icon"></i>
                                        <p>Asignar Docentes</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "StudentAssignment")" class="nav-link">
                                        <i class="fas fa-tasks nav-icon"></i>
                                        <p>Asignar Estudiantes</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Upload", "AcademicAssignment")" class="nav-link">
                                        <i class="fas fa-file-upload nav-icon"></i>
                                        <p>Carga Asignaciones Docentes</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Upload", "StudentAssignment")" class="nav-link">
                                        <i class="fas fa-file-upload nav-icon"></i>
                                        <p>Carga Asignaciones Estudiantes</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "EmailConfiguration")" class="nav-link">
                                        <i class="fas fa-envelope nav-icon"></i>
                                        <p>Configuración de Email</p>
                                    </a>
                                </li>
                                @if (userRole == "admin") {
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "CounselorAssignment")" class="nav-link">
                                        <i class="fas fa-user-tie nav-icon"></i>
                                        <p>Asignaciones de Consejeros</p>
                                    </a>
                                </li>
                                }
                            </ul>
                        </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
                
                <!-- QL Services Logo al final del sidebar -->
                <div class="sidebar-footer" style="padding: 1rem; border-top: 1px solid rgba(255,255,255,0.1); margin-top: auto;">
                    <div class="text-center">
                        <img src="~/images/logo-ql-services.png" alt="QL Services" style="max-height: 40px; filter: brightness(1.1); opacity: 0.8;" class="mb-1">
                        <div style="font-size: 0.7rem; color: rgba(255,255,255,0.6); font-weight: 500;">
                            Desarrollado por QL Services
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Contenido principal -->
        <div class="content-wrapper">
            <section class="content pt-4">
                @RenderBody()
            </section>
        </div>

        <footer class="main-footer" style="background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%); padding: 2rem 0; margin-top: 2rem;">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-8 mb-3 mb-md-0">
                        <div style="color: #ffffff;">
                            <h6 style="font-weight: 600; margin-bottom: 0.75rem; color: #fbbf24; font-size: 1.1rem;">Eduplaner</h6>
                            <p style="margin-bottom: 0.5rem; font-size: 0.95rem; line-height: 1.5;">
                                <strong>© @DateTime.Now.Year Eduplaner.</strong> Todos los derechos reservados.
                            </p>
                            <p style="margin-bottom: 0.4rem; font-size: 0.9rem; line-height: 1.4; opacity: 0.95;">
                                Eduplaner es un producto desarrollado y propiedad de <strong style="color: #fbbf24;">QL Services</strong>.
                            </p>
                            <p style="margin-bottom: 0; font-size: 0.85rem; font-style: italic; opacity: 0.9; line-height: 1.3;">
                                Queda prohibida la reproducción total o parcial sin autorización expresa.
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4 text-center text-md-end">
                        <div class="d-flex align-items-center justify-content-center justify-content-md-end gap-3 mb-2">
                            <img src="~/images/logo-eduplaner.png" alt="Eduplaner Logo" class="footer-logo" style="max-height: 70px; filter: brightness(1.2) contrast(1.1); transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
                            <img src="~/images/logo-ql-services.png" alt="QL Services Logo" class="footer-logo" style="max-height: 50px; filter: brightness(1.2) contrast(1.1); transition: transform 0.3s ease;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
                        </div>
                        <small style="color: rgba(255, 255, 255, 0.85); font-size: 0.85rem;">Versión 1.0</small>
                    </div>
                </div>
                <div class="row mt-2 pt-2" style="border-top: 1px solid rgba(255, 255, 255, 0.2);">
                    <div class="col-12 text-center">
                        <small style="color: rgba(255, 255, 255, 0.8); font-size: 0.8rem;">
                            Sistema de Gestión Escolar | Desarrollado con tecnología .NET
                        </small>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/adminlte/js/adminlte.min.js"></script>
    <!-- JS de DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para actualizar contador de mensajes no leídos -->
    <script>
        $(document).ready(function () {
            function updateUnreadCount() {
                $.get('@Url.Action("GetUnreadCount", "Messaging")', function (data) {
                    if (data.count > 0) {
                        // Actualizar badge en el sidebar
                        $('.unread-badge').text(data.count).show();
                        // Actualizar badge en el navbar superior
                        $('.unread-badge-top').text(data.count).show();
                        
                        // Animar el icono de mensajes para llamar la atención
                        $('.unread-badge-top').parent().addClass('pulse-animation');
                    } else {
                        $('.unread-badge, .unread-badge-top').hide();
                        $('.unread-badge-top').parent().removeClass('pulse-animation');
                    }
                }).fail(function() {
                    // Silenciosamente fallar si el endpoint no está disponible
                    console.log('No se pudo obtener el contador de mensajes');
                });
            }
            
            // Actualizar al cargar la página
            updateUnreadCount();
            
            // Actualizar cada 30 segundos (tiempo real)
            setInterval(updateUnreadCount, 30000);
        });
    </script>
    
    <!-- CSS para animación de pulso -->
    <style>
        .navbar-badge {
            font-size: 0.6rem;
            font-weight: bold;
            position: absolute;
            top: 5px;
            right: 5px;
            padding: 2px 5px;
            border-radius: 10px;
        }
        
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }
        
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        
        .unread-badge-top {
            background-color: #dc3545 !important;
            color: white !important;
        }
    </style>

    @RenderSection("Scripts", required: false)
</body>
</html>
