@model SchoolManager.Dtos.PrematriculationPeriodDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Crear Período de Prematrícula";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-calendar-plus mr-2"></i>Nuevo Período de Prematrícula</h3>
                <small>Configure las fechas y parámetros del período de prematrícula</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Información del Período</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label">Fecha de Inicio *</label>
                                <input asp-for="StartDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label">Fecha de Fin *</label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MaxCapacityPerGroup" class="form-label">Cupo Máximo por Grupo *</label>
                                <input asp-for="MaxCapacityPerGroup" type="number" class="form-control" min="1" value="30" required />
                                <span asp-validation-for="MaxCapacityPerGroup" class="text-danger"></span>
                                <small class="form-text text-muted">Número máximo de estudiantes por grupo</small>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mt-4 pt-3">
                                    <input asp-for="AutoAssignByShift" type="checkbox" class="form-check-input" checked />
                                    <label asp-for="AutoAssignByShift" class="form-check-label">
                                        Asignación Automática por Turno
                                    </label>
                                    <small class="form-text text-muted d-block">El sistema asignará grupos automáticamente manteniendo el turno</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Período Activo
                            </label>
                            <small class="form-text text-muted d-block">Si está activo, será el período disponible para prematrículas</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Guardar Período
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

