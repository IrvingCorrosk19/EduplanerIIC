@model SchoolManager.Models.School
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Detalles de Escuela";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-info-circle mr-2"></i>Detalles de Escuela</h3>
                <small>Información completa de la institución</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-school mr-2"></i>Información de la Escuela</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">Dirección:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Logo:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <img src="@Model.LogoUrl" alt="Logo" style="max-height: 150px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin logo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Fecha de Creación:</dt>
                        <dd class="col-sm-8">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>

                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8"><code>@Model.Id</code></dd>
                    </dl>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="fas fa-edit mr-2"></i>Editar
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                            <i class="fas fa-trash mr-2"></i>Eliminar
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
