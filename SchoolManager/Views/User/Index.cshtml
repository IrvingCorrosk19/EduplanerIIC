        // Formatear n√∫meros de celular con c√≥digo de Panam√°
        function formatPhoneNumbers() {
            $('input[name="CellphonePrimary"], input[name="CellphoneSecondary"]').on('input', function() {
                let value = $(this).val().replace(/\D/g, ''); // Solo n√∫meros
                
                // Si no empieza con 507, agregarlo autom√°ticamente
                if (value.length > 0 && !value.startsWith('507')) {
                    value = '507' + value;
                }
                
                // Limitar a 11 d√≠gitos (507 + 8 d√≠gitos)
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                
                // Formatear: +507 XXXX XXXX
                if (value.length >= 3) {
                    let formatted = '+' + value.substring(0, 3);
                    if (value.length > 3) {
                        formatted += ' ' + value.substring(3, 7);
                    }
                    if (value.length > 7) {
                        formatted += ' ' + value.substring(7);
                    }
                    $(this).val(formatted);
                } else if (value.length > 0) {
                    $(this).val('+' + value);
                }
            });
            
            // Manejar el evento de pegar
            $('input[name="CellphonePrimary"], input[name="CellphoneSecondary"]').on('paste', function(e) {
                setTimeout(() => {
                    let value = $(this).val().replace(/\D/g, '');
                    if (value.length > 0 && !value.startsWith('507')) {
                        value = '507' + value;
                    }
                    if (value.length > 11) {
                        value = value.substring(0, 11);
                    }
                    
                    if (value.length >= 3) {
                        let formatted = '+' + value.substring(0, 3);
                        if (value.length > 3) {
