                    // Si no está listo y no hemos excedido los intentos, esperar un poco más
                    if (attempts < maxAttempts) {
                        console.log(`⏳ Tabla no está lista, reintentando en 100ms... (${attempts}/${maxAttempts})`);
                        setTimeout(checkAndInitialize, 100);
                    } else {
