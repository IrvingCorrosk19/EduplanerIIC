                    return null;
                }
                
                if (bodyRows.length === 0) {
                    console.error('❌ No se encontraron filas en el body');
                    return null;
                }
                
                if (headerColumns !== bodyColumns) {
                    console.error('❌ Error: Número de columnas no coincide. Header:', headerColumns, 'Body:', bodyColumns);
                    return null;
                }
                
                // Verificar que todas las filas tengan el mismo número de columnas
                var hasInconsistentRows = false;
                bodyRows.each(function(index) {
                    var rowColumns = $(this).find('td').length;
                    if (rowColumns !== headerColumns) {
                        console.error('❌ Error: Fila', index, 'tiene', rowColumns, 'columnas, esperadas:', headerColumns);
                        hasInconsistentRows = true;
                    }
                });
                
                if (hasInconsistentRows) {
