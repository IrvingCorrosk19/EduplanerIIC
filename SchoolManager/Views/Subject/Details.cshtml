@model SchoolManager.Models.Subject
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Detalles de Materia";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-info-circle mr-2"></i>Detalles de Materia</h3>
                <small>Información completa de la materia</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-book mr-2"></i>Información de la Materia</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@(Model.Description ?? "Sin descripción")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Status == true)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Fecha de Creación:</dt>
                        <dd class="col-sm-8">@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                    </dl>

                    <div class="mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
