@model IEnumerable<SchoolManager.Dtos.PaymentConceptDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Conceptos de Pago";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-money-check-alt mr-2"></i>Conceptos de Pago</h3>
                <small>Configure los conceptos y montos de pago</small>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Nuevo Concepto de Pago
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list mr-2"></i>Lista de Conceptos de Pago</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>No hay conceptos de pago registrados.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="conceptsTable">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripción</th>
                                        <th>Monto</th>
                                        <th>Periodicidad</th>
                                        <th>Estado</th>
                                        <th>Creado Por</th>
                                        <th>Fecha Creación</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var concept in Model)
                                    {
                                        <tr>
                                            <td><strong>@concept.Name</strong></td>
                                            <td>@(concept.Description ?? "-")</td>
                                            <td>@concept.Amount.ToString("C")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(concept.Periodicity))
                                                {
                                                    <span class="badge bg-info">@concept.Periodicity</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (concept.IsActive)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td>@(concept.CreatedByName ?? "N/A")</td>
                                            <td>@concept.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = concept.Id })" class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" action="@Url.Action("Delete", new { id = concept.Id })" style="display:inline;" onsubmit="return confirm('¿Está seguro de eliminar este concepto de pago?');">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#conceptsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
                "order": [[0, "asc"]]
            });
        });
    </script>
}

