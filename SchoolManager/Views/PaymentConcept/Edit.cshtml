@model SchoolManager.Dtos.PaymentConceptCreateDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Editar Concepto de Pago";
    var conceptId = ViewBag.ConceptId as Guid?;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-edit mr-2"></i>Editar Concepto de Pago</h3>
                <small>Actualice la información del concepto de pago</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Información del Concepto</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" asp-route-id="@conceptId">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nombre del Concepto *</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="form-text text-muted">Ej: Matrícula, Mensualidad, Materiales, etc.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descripción</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monto *</label>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <small class="form-text text-muted">Monto mínimo requerido para este concepto</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Periodicity" class="form-label">Periodicidad</label>
                            <select asp-for="Periodicity" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <option value="Único">Único</option>
                                <option value="Mensual">Mensual</option>
                                <option value="Trimestral">Trimestral</option>
                                <option value="Semestral">Semestral</option>
                                <option value="Anual">Anual</option>
                            </select>
                            <span asp-validation-for="Periodicity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Concepto activo
                                </label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

