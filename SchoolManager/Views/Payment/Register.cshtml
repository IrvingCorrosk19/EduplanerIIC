@model SchoolManager.Dtos.PaymentCreateDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Registrar Pago";
    var prematriculation = ViewBag.Prematriculation as SchoolManager.Models.Prematriculation;
    var payments = ViewBag.Payments as IEnumerable<SchoolManager.Dtos.PaymentDto>;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-money-bill-alt mr-2"></i>Registrar Pago de Prematrícula</h3>
                <small>Registre el pago realizado por el acudiente</small>
            </div>
        </div>
    </div>

    @if (prematriculation == null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle mr-2"></i>Prematrícula no encontrada.
        </div>
        <a href="@Url.Action("Search")" class="btn btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Volver a Búsqueda
        </a>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle mr-2"></i>Información de la Prematrícula</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Código:</strong> <code>@prematriculation.PrematriculationCode</code></p>
                                <p><strong>Estudiante:</strong> @(prematriculation.Student?.Name ?? "N/A") @(prematriculation.Student?.LastName ?? "")</p>
                                <p><strong>Estado:</strong> 
                                    @switch (prematriculation.Status)
                                    {
                                        case "Prematriculado":
                                            <span class="badge bg-info">Prematriculado</span>
                                            break;
                                        case "Pagado":
                                            <span class="badge bg-primary">Pagado</span>
                                            break;
                                        case "Matriculado":
                                            <span class="badge bg-success">Matriculado</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@prematriculation.Status</span>
                                            break;
                                    }
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Grado:</strong> @(prematriculation.Grade?.Name ?? "No asignado")</p>
                                <p><strong>Grupo:</strong> @(prematriculation.Group?.Name ?? "No asignado")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (payments != null && payments.Any())
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-history mr-2"></i>Pagos Registrados</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Recibo</th>
                                            <th>Monto</th>
                                            <th>Fecha</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in payments)
                                        {
                                            <tr>
                                                <td><code>@payment.ReceiptNumber</code></td>
                                                <td>@payment.Amount.ToString("C")</td>
                                                <td>@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    @if (payment.PaymentStatus == "Confirmado")
                                                    {
                                                        <span class="badge bg-success">Confirmado</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Pendiente</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-plus-circle mr-2"></i>Nuevo Pago</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="PrematriculationId" value="@prematriculation.Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="PaymentConceptId" class="form-label">Concepto de Pago</label>
                                <select asp-for="PaymentConceptId" class="form-select" id="paymentConceptSelect">
                                    <option value="">Seleccione un concepto (opcional)</option>
                                    @if (ViewBag.PaymentConcepts != null)
                                    {
                                        @foreach (var concept in ViewBag.PaymentConcepts as List<SchoolManager.Dtos.PaymentConceptDto>)
                                        {
                                            <option value="@concept.Id" data-amount="@concept.Amount">
                                                @concept.Name - @concept.Amount.ToString("C")
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="PaymentConceptId" class="text-danger"></span>
                                <small class="form-text text-muted">Al seleccionar un concepto, el monto se establecerá automáticamente</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label">Monto Pagado *</label>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" required id="amountInput" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PaymentMethod" class="form-label">Método de Pago *</label>
                                <select asp-for="PaymentMethod" class="form-select" id="paymentMethodSelect" required>
                                    <option value="">Seleccione un método de pago</option>
                                    <option value="Tarjeta">Tarjeta de Crédito/Débito</option>
                                    <option value="Transferencia">Transferencia Bancaria</option>
                                    <option value="Depósito">Depósito Bancario</option>
                                    <option value="Yappy">Yappy</option>
                                    <option value="Efectivo">Efectivo</option>
                                </select>
                                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                                <small class="form-text text-muted">Los métodos manuales (Transferencia, Depósito, Yappy) requieren adjuntar comprobante</small>
                            </div>

                            <div class="mb-3" id="receiptImageDiv" style="display: none;">
                                <label for="receiptImageFile" class="form-label">Comprobante de Pago (Imagen) *</label>
                                <input type="file" name="receiptImageFile" id="receiptImageFile" class="form-control" accept="image/*" />
                                <span asp-validation-for="ReceiptImage" class="text-danger"></span>
                                <small class="form-text text-muted">Adjunte una imagen del comprobante de pago (JPG, PNG, PDF)</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ReceiptNumber" class="form-label">Número de Recibo Oficial *</label>
                                <input asp-for="ReceiptNumber" class="form-control" required />
                                <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
                                <small class="form-text text-muted">Número del recibo oficial de la institución</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PaymentDate" class="form-label">Fecha de Pago *</label>
                                <input asp-for="PaymentDate" type="datetime-local" class="form-control" required 
                                       value="@(Model.PaymentDate != default(DateTime) && Model.PaymentDate.Year >= 2000 ? Model.PaymentDate.ToString("yyyy-MM-ddTHH:mm") : DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm"))" />
                                <span asp-validation-for="PaymentDate" class="text-danger"></span>
                                <small class="form-text text-muted">Seleccione la fecha y hora del pago</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Notas</label>
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left mr-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-2"></i>Registrar Pago
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Mostrar/ocultar campo de comprobante según método de pago
            $('#paymentMethodSelect').change(function() {
                var method = $(this).val();
                if (method === 'Transferencia' || method === 'Depósito' || method === 'Yappy') {
                    $('#receiptImageDiv').show();
                    $('#receiptImageFile').prop('required', true);
                } else {
                    $('#receiptImageDiv').hide();
                    $('#receiptImageFile').prop('required', false);
                }
            });

            // Actualizar monto cuando se selecciona un concepto
            $('#paymentConceptSelect').change(function() {
                var selectedOption = $(this).find('option:selected');
                var amount = selectedOption.data('amount');
                if (amount) {
                    $('#amountInput').val(amount);
                }
            });
        });
    </script>
}

