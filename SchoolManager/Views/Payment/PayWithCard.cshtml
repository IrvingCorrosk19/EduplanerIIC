@model SchoolManager.Dtos.PaymentCreateDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Pago Inmediato con Tarjeta";
    var selectedPrematriculation = ViewBag.SelectedPrematriculation as SchoolManager.Models.Prematriculation;
    var paymentConcepts = ViewBag.PaymentConcepts as List<SchoolManager.Dtos.PaymentConceptDto> ?? new();
    var existingPayments = ViewBag.ExistingPayments as List<SchoolManager.Dtos.PaymentDto> ?? new();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="portal-header">
                <h3><i class="fas fa-bolt mr-2"></i>Pago Inmediato con Tarjeta</h3>
                <small>Complete el pago para confirmar la matrícula</small>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle mr-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (selectedPrematriculation != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user-graduate mr-2"></i>Detalles de la Prematrícula</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Código:</strong> <code>@selectedPrematriculation.PrematriculationCode</code></p>
                                <p>
                                    <strong>Estudiante:</strong>
                                    @(selectedPrematriculation.Student?.Name ?? "N/A")
                                    @(selectedPrematriculation.Student?.LastName ?? "")
                                </p>
                                <p><strong>Grado:</strong> @(selectedPrematriculation.Grade?.Name ?? "No asignado")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Estado actual:</strong>
                                    @switch (selectedPrematriculation.Status)
                                    {
                                        case "Prematriculado":
                                            <span class="badge bg-info">Prematriculado</span>
                                            break;
                                        case "Pagado":
                                            <span class="badge bg-primary">Pagado</span>
                                            break;
                                        case "Matriculado":
                                            <span class="badge bg-success">Matriculado</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@selectedPrematriculation.Status</span>
                                            break;
                                    }
                                </p>
                                <p><strong>Fecha de reserva:</strong> @selectedPrematriculation.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (existingPayments.Any())
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-history mr-2"></i>Pagos registrados</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Recibo</th>
                                            <th>Monto</th>
                                            <th>Fecha</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var payment in existingPayments)
                                        {
                                            <tr>
                                                <td><code>@payment.ReceiptNumber</code></td>
                                                <td>@payment.Amount.ToString("C")</td>
                                                <td>@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    @if (payment.PaymentStatus == "Confirmado")
                                                    {
                                                        <span class="badge bg-success">Confirmado</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-credit-card mr-2"></i>Datos del pago</h5>
                </div>
                <div class="card-body">
                    <form asp-action="PayWithCard" method="post">
                        <input type="hidden" asp-for="PrematriculationId" value="@selectedPrematriculation?.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PaymentConceptId" class="form-label">Concepto de pago</label>
                            <select asp-for="PaymentConceptId" class="form-select" id="paymentConceptSelect">
                                <option value="">Seleccione un concepto (opcional)</option>
                                @foreach (var concept in paymentConcepts)
                                {
                                    <option value="@concept.Id" data-amount="@concept.Amount">
                                        @concept.Name - @concept.Amount.ToString("C")
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="PaymentConceptId" class="text-danger"></span>
                            <small class="form-text text-muted">Al elegir un concepto se sugerirá el monto definido para ese rubro.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Monto *</label>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control" required id="amountInput" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Método de pago</label>
                            <input type="text" class="form-control" value="Tarjeta de Crédito/Débito (simulado)" readonly />
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-lock mr-2"></i>
                            Este pago se procesa en modo de prueba. Se confirmará de inmediato y activará la matrícula del estudiante.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("MyPrematriculations", "Prematriculation")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Volver a prematrículas
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-bolt mr-2"></i>Pagar y confirmar matrícula
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const conceptSelect = document.getElementById("paymentConceptSelect");
            const amountInput = document.getElementById("amountInput");

            if (conceptSelect && amountInput) {
                conceptSelect.addEventListener("change", function () {
                    const selectedOption = conceptSelect.selectedOptions[0];
                    const amount = selectedOption ? selectedOption.getAttribute("data-amount") : null;
                    if (amount) {
                        amountInput.value = amount;
                    }
                });
            }
        });
    </script>
}


